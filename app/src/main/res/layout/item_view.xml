<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Saurabh Sharma"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/item_age"
            android:layout_below="@id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="26 Yrs."
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/item_occupation"
            android:layout_below="@id/item_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Computer Engineer"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/item_gotra"
            android:layout_below="@id/item_occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Bharadwaj"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>